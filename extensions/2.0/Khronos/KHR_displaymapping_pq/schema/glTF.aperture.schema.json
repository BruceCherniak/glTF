{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Aperture settings",
    "type": "object",
    "description": "Defines settings for aperture.",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "mode": {
            "description": "Specifies the aperture mode",
            "anyOf": [
                {
                    "const": "OFF"
                },
                {
                    "const": "AUTO"
                }
            ]
    },
    "required": [ "mode" ]
}