{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Aperture settings",
    "type": "object",
    "description": "Defines settings for aperture.",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "value": {
            "type": "number",
            "description": "Specifies the aperture value."
            "minItems": 1,
        },
        "control": {
            "type": "number",
            "description": "Specifies the aperture control."
            "minItems": 1,
        },
        "minLuminance": {
            "type": "number",
            "description": "Specifies the minimim incoming luminance used in aperture calculations."
            "minItems": 1,
        },
        "maxLuminance": {
            "type": "number",
            "description": "Specifies the maximum incoming luminance used in aperture calculations."
            "minItems": 1,
        }
    },
}